{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "mingw32-make.exe -C ./build/ package",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Svg",
            "type": "shell",
            "command": "cat ${env:TMP}/output.json | jq -r .[2].map > ${env:TMP}/output.svg"
        }
    ]
}